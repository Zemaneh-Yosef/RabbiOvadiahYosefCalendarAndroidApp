<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/widget"
    style="@style/Widget.RabbiOvadiahYosefCalendar.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:theme="@style/AppTheme.AppWidgetContainer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="fill"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/jewish_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:autoSizeMaxTextSize="36sp"
                android:autoSizeMinTextSize="11sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:textStyle="bold"
                android:gravity="center"
                tools:text="29 Cheshvan, 5783"/>

            <TextView
                android:id="@+id/parsha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoSizeMaxTextSize="36sp"
                android:autoSizeMinTextSize="11sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:padding="8dp"
                tools:text="תרומה"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/widget_next_zman"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/zman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:autoSizeMaxTextSize="36sp"
                android:autoSizeMinTextSize="11sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                tools:text="Chatzot"/>

            <TextView
                android:id="@+id/zman_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:autoSizeMaxTextSize="36sp"
                android:autoSizeMinTextSize="11sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:textStyle="bold"
                tools:text="12:30 AM"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/widget_tachanun_daf"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tachanun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:autoSizeMaxTextSize="36sp"
                android:autoSizeMinTextSize="11sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                tools:text="Tachanun"/>

            <TextView
                android:id="@+id/daf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:autoSizeMaxTextSize="36sp"
                android:autoSizeMinTextSize="11sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                tools:text="Daf Yomi"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>