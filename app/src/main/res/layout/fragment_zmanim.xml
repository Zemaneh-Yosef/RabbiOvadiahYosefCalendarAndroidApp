<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.MainFragmentManager">

    <TextClock
        android:id="@+id/clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:format12Hour="h:mm:ss a"
        android:format24Hour="H:mm:ss"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:gravity="center"
        android:visibility="gone"
        tools:text="4:15 PM"/>

    <TextView
        android:id="@+id/shabbat_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:padding="5dp"
        android:scrollHorizontally="true"
        tools:text="SHABBAT/CHAG MODE                SHABBAT/CHAG MODE               SHABBAT/CHAG MODE           SHABBAT/CHAG MODE             SHABBAT/CHAG MODE"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@color/darkblue"
        android:gravity="center"
        android:visibility="gone"
        tools:ignore="HardcodedText" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:shimmer_auto_start="true"
        tools:visibility="gone">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dummyRV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constrainedHeight="true" />

    </com.facebook.shimmer.ShimmerFrameLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="visible">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/daily_location_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="22sp"
                    android:autoSizeMinTextSize="8sp"
                    android:maxLines="1"
                    android:padding="4dp"
                    tools:ignore="UnusedAttribute" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/daily_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginVertical="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/weekday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:maxLines="1"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMaxTextSize="20sp"
                            android:autoSizeMinTextSize="8sp"
                            tools:text="Friday / יום שישי"/>

                        <TextView
                            android:id="@+id/greg_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textSize="26sp"
                            android:maxLines="1"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMaxTextSize="26sp"
                            android:autoSizeMinTextSize="8sp"
                            tools:text="Today - July 10th, 2025"/>

                        <TextView
                            android:id="@+id/heb_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textSize="20sp"
                            android:maxLines="1"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMaxTextSize="20sp"
                            android:autoSizeMinTextSize="8sp"
                            tools:text="Pre-sunset: 14 Ḥeshvan 5785"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/parsha_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginVertical="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/parsha"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textSize="24sp"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:maxLines="1"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMaxTextSize="24sp"
                            android:autoSizeMinTextSize="8sp"
                            tools:text="דברים / חזון"
                            android:fontFamily="@font/vilna"/>

                        <LinearLayout
                            android:id="@+id/haftara_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/haftara"
                                android:textSize="20sp"
                                android:src="@drawable/megila_icon"
                                android:text="@string/haftara"/>

                            <TextView
                                android:id="@+id/haftara"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:paddingStart="5dp"
                                android:layout_gravity="center"
                                android:maxLines="1"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMaxTextSize="20sp"
                                android:autoSizeMinTextSize="8sp"
                                tools:text="Haftarah: חזון (ישעיה א)"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/makam_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:baselineAligned="true">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/u1f3bc__1_"
                                android:text="@string/haftara"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/makam"
                                android:paddingStart="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:layout_gravity="center"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMaxTextSize="20sp"
                                android:autoSizeMinTextSize="8sp"
                                tools:text="Makam: Rast"/>

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mainRV"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never"
                    android:descendantFocusability="afterDescendants"
                    app:layout_constrainedHeight="true"
                    android:visibility="visible"/>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/main_weekly_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layoutDirection="ltr"
        android:visibility="invisible"
        tools:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:id="@+id/location_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Great Neck, New York"
            android:textStyle="bold"
            android:textSize="11sp"
            android:textColor="?android:attr/textColorPrimary"
            android:gravity="center"
            android:background="@drawable/border"
            tools:visibility="visible"
            />

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/englishMonthYear"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                tools:text="December - January 2022 - 2023"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="?android:attr/textColorPrimary"
                tools:visibility="visible"
                />

            <TextView
                android:id="@+id/hebrewMonthYear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingEnd="4dp"
                tools:text="Nissan 5782 - 5783"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="?android:attr/textColorPrimary"
                android:gravity="end"
                tools:visibility="visible"
                />

        </LinearLayout>

        <!-- This is where the zmanim for sunday are displayed -->
