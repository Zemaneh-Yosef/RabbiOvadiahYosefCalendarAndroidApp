<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tehillimBookNumber"
        style="@style/Theme.AppTheme.MaterialPreferenceCategory.Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_blue_A400"
        android:visibility="gone"
        tools:text="Book 1"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:paddingVertical="8dp">

        <!-- This invisible view contains the widest possible text ("קיט"). -->
        <!-- Its only job is to reserve the correct amount of space in every row. -->
        <TextView
            android:id="@+id/chapter_width_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mantb_2"
            android:maxLines="1"
            android:paddingHorizontal="16dp"
            android:text="קיט"
            android:textSize="26sp"
            android:textStyle="bold"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- This is the actual TextView that displays the chapter number (e.g., "כ"). -->
        <!-- It is constrained to the placeholder, so it will be centered within the same reserved space. -->
        <TextView
            android:id="@+id/tehillimChapter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mantb_2"
            android:gravity="center"
            android:maxLines="1"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/chapter_width_placeholder"
            app:layout_constraintEnd_toEndOf="@id/chapter_width_placeholder"
            app:layout_constraintStart_toStartOf="@id/chapter_width_placeholder"
            app:layout_constraintTop_toTopOf="@id/chapter_width_placeholder"
            tools:text="כא" />

        <TextView
            android:id="@+id/tehillimText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/guttman_keren"
            android:maxLines="1"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tehillimChapterNumber"
            app:layout_constraintStart_toEndOf="@id/chapter_width_placeholder"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="מִזְמ֗וֹר לְדָ֫וִ֥ד יְ֭הֹוָה מִי־יָג֣וּר בְּאָהֳלֶ֑ךָ מִֽי־יִ֝שׁכֹּ֗ן בְּהַ֣ר קָדְשֶֽׁךָ׃" />

        <TextView
            android:id="@+id/tehillimChapterNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingHorizontal="16dp"
            android:textSize="26sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
